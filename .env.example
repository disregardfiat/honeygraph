# Honeygraph Configuration Example

# API Configuration
API_PORT=3030
NODE_ENV=development

# Dgraph Configuration
DGRAPH_URL=http://localhost:9080

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Authentication Configuration
# Enable Hive-based authentication for honeycomb nodes
REQUIRE_HIVE_AUTH=true

# Comma-separated list of authorized Hive accounts (leave empty to allow any authenticated account)
# Example: AUTHORIZED_HONEYCOMB_NODES=spk-test,dlux-io,honeycomb-node1
AUTHORIZED_HONEYCOMB_NODES=

# JWT Configuration (for future use)
JWT_SECRET=change-me-in-production

# Network Configuration
PEER_ID=honeygraph-node-1
SYNC_ENABLED=false
SYNC_INTERVAL=60000
PEERS=

# ZFS Configuration
ZFS_CHECKPOINTS_ENABLED=false
ZFS_DATASET=rpool/dgraph
ZFS_MAX_SNAPSHOTS=100
DGRAPH_DATA_PATH=./data

# CORS Configuration
CORS_ORIGIN=*

# Data Path
DATA_PATH=./data/honeygraph